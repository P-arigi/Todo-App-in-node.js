<div class="container mt-2">
   <form action="/todos/add"  method= "POST" class="d-flex">
    <input type="text" name="todo" class="form-control" placeholder="Enter your todo">
    <input type="submit"  class="add" value="Add">
    
    
    
  </form>
  
<ul class="list-group my-5">
   
    <% todo.forEach(todos => { %> 
     <li class="list-group-item"><%= todos.todo %>
    <a href="/todos/delete/<%= todos._id %>" class="btn btn-danger btn-sm">Delete</a>
    
    
    
    
     </li>
   <% }) %>
   
   
  </ul>
  

</div>