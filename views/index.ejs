<%- include("./partials/header") %>
<%- include("./partials/footer") %>

<nav class="navbar navbar-light bg-light">
    <a class="navbar-brand" href="/">Todo App</a>
  </nav>

<div class="container mt-5">
   <form action="/add/todo"  method= "POST" class="d-flex">
    <input type="text" name="todo" class="form-control" placeholder="Enter your todo">
    <input type="submit"  class="btn btn-md btn-primary mx-2" value="Add">
    
    
    
</form>
<ul class="list-group my-5">
   
    <% todo.forEach(todos => { %> 
     <li class="list-group-item"><%= todos.todo %>
    <a href="/delete/todo/<%= todos._id %>" class="btn btn-danger btn-sm">Delete</a>
    
     </li>
   <% }) %>
   
   
  </ul>

</div>